<h3>Welcome!</h3>

<p>Please register to send a friend a bit of advice.</p>

<%= form_for @user do |f| %>
  <%=f.label :first_name  %>
  <%=f.text_field :first_name  %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Submit"%>
<% end %>
