<h3>So glad you're here!</h3>

<p>Please register below to send a friend a bit of advice.</p>

<div class="form-wrapper">
  <%= form_for @user do |f| %>
    <div class="form-group">
      <div class="col-sm-3 my-1">
        <%=f.text_field :first_name, class:"form-control", id:"inlineFormInputName", placeholder: "First Name" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-3 my-1">
          <%= f.text_field :last_name, class:"form-control", id:"inlineFormInputName", placeholder: "Last Name"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-3 my-1">
        <%= f.text_field :email, class:"form-control", id:"inlineFormInputName" , placeholder: "Email"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-3 my-1">
        <%= f.password_field :password, class:"form-control", id:"inputPassword3", placeholder: "Password"%>
      </div>
    </div>
    <div class="col-auto my-1">
      <%= f.submit "Register", class:"btn btn-primary"%>
    </div>
  <% end %>
</div>
