<!DOCTYPE html>
<html>
  <head>
    <title>ABitOfAdvice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="image-wrapper">
      <img src="https://images.unsplash.com/photo-1500964757637-c85e8a162699?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1378&q=80" alt="">
    </div>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container">
        <div class="navbar-nav">
          <%= link_to "Welcome", '/', class: "nav-link" %>
          <% if logged_in? %>
            <%= link_to "Log out", '/logout', method: 'delete', class: "nav-link"%>
          <% else %>
            <%= link_to "Register as a user", registration_path, class: "nav-link" %>
            <%= link_to "Log in", "/login", class: "nav-link" %>
          <% end %>
        </div>
      </div>
    </nav>
    <% flash.each do |type, msg| %>
      <div class="<%= "alert alert-#{type}" %>">
        <%= msg %>
      </div>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>

